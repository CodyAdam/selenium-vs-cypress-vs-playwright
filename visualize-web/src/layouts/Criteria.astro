---
import RatingChip from "../components/RatingChip.astro";
const {frontmatter} = Astro.props;
---

<html lang="fr">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title} | Criteria</title>
</head>
<body class="bg-slate-200 space-y-12 max-w-4xl mx-auto py-12">
<header class="space-y-6">
    <div class="flex items-center gap-4">
        <a href="/selenium-vs-cypress-vs-playwright"><svg xmlns="http://www.w3.org/2000/svg" class="h-10 fill-current hover:-translate-x-2 transition-transform" viewBox="0 0 24 24"><path  d="m7.825 13l5.6 5.6L12 20l-8-8l8-8l1.425 1.4l-5.6 5.6H20v2z"/></svg></a>
        <h1 class="text-4xl font-bold">
          {frontmatter.title}
        </h1>
    </div>
    <div class="flex gap-2">
        <RatingChip rating={frontmatter.cypress}>Cypress</RatingChip>
        <RatingChip rating={frontmatter.selenium}>Selenium</RatingChip>
        <RatingChip rating={frontmatter.playwright}>Playwright</RatingChip>
    </div>

</header>

  <main class="bg-slate-50 rounded-lg overflow-hidden shadow-md p-6 prose max-w-none">
      <slot />
  </main>
  </body>
</html>
